{
  "name": "pnpm_workspace_poc",
  "version": "1.0.0",
  "description": "A minimal starter repository for setting up a monorepo using pnpm workspace.",
  "scripts": {
    "build": "pnpm run -r build",
    "start": "pnpm run -r start",
    "dev:packages": "pnpm run -r --filter './packages/*' build && pnpm run -r --filter './packages/*' dev",
    "dev": "pnpm run -parallel --filter './apps/*' dev",
    "build:frontend": "pnpm --filter frontend build",
    "start:frontend": "pnpm --filter frontend start",
    "dev:frontend": "pnpm --filter frontend dev",
    "build:backend": "pnpm --filter backend build",
    "start:backend": "pnpm --filter backend start",
    "dev:backend": "pnpm --filter backend dev",
    "format": "prettier --write .",
    "lint": "pnpm run -r --parallel lint",
    "prepare": "husky",
    "postinstall": "pnpm --filter @acme/prisma-db db:generate"
  },
  "keywords": [],
  "author": "Ayaan Shaikh",
  "license": "ISC",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
